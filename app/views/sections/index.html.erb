<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.title %></td>
        <td style="width: 30px;"><%= link_to 'Show', section, class: "btn btn-success" %></td>
        <td style="width: 30px;">
          <%= link_to 'Edit', edit_section_path(section), class: "btn btn-info" %>
        </td>
        <td style="width: 30px;">
          <%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path, class: "btn btn-primary" %>