<div class="panel panel-info">
  <div class="panel-heading">
    Section Management
  </div>
  <div class="panel-body">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.title %></td>
        <td style="width: 30px;"><%= link_to '', section, class: "btn btn-default glyphicon glyphicon-eye-open" %></td>
        <td style="width: 30px;">
          <%= link_to '', edit_section_path(section), class: "btn btn-default glyphicon glyphicon-pencil" %>
        </td>
        <td style="width: 30px;">
          <%= link_to '', section, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default glyphicon glyphicon-trash" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '', new_section_path, class: "btn btn-default glyphicon glyphicon-plus" %>
</div>
</div>